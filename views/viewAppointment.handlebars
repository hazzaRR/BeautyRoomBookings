<section class="section-container">

  <div class="page">
    <div class="field field_v3">
      <label for="appID" class="ha-screen-reader">Appointment ID</label>
      <span id="appID" class="field__input">#{{appointmentID}}</span>
      <span class="field__label-wrap" aria-hidden="true">
        <span class="field__label">Appointment ID</span>
      </span>
    </div>
    <div class="field field_v3">
      <label for="cName" class="ha-screen-reader">Client Name</label>
      <span id="cName" class="field__input">{{client_name}}</span>
      <span class="field__label-wrap" aria-hidden="true">
        <span class="field__label">Client Name</span>
      </span>
    </div>    
    <div class="field field_v3">
      <label for="appDate" class="ha-screen-reader">Date</label>
      <span id="appDate" class="field__input">{{date}}</span>
      <span class="field__label-wrap" aria-hidden="true">
        <span class="field__label">Date</span>
      </span>
    </div>
      <div class="field field_v3">
      <label for="startTime" class="ha-screen-reader">Start Time</label>
      <span id="startTime" class="field__input">{{start_time}}</span>
      <span class="field__label-wrap" aria-hidden="true">
        <span class="field__label">Start Time</span>
      </span>
    </div>
    <div class="field field_v3">
      <label for="endTime" class="ha-screen-reader">End Time</label>
      <span id="endTime" class="field__input">{{end_time}}</span>
      <span class="field__label-wrap" aria-hidden="true">
        <span class="field__label">End Time</span>
      </span>
    </div>
    
  </div>
    
    <div>
    <h4 class="treatmentTypes">List of treatments</h4>

        <ul class="treatment-ul">
        {{#each treatments}}
            <li class="treatment-li" id="{{this.id}}">
                <div>
                    <h5 class="treatmentname">{{this.treatmentname}}</h5>
                </div>
                <div>
                    <span class="treatment-info">£{{this.price}}</span>
                    <span>.</span>
                </div>
            <button class="deleteTreatmentButton" id="deleteTreatment">Delete</button>
            </li>
        {{/each}}
        </ul>

    <h4 id="totalPrice" class="treatmentTypes">Total: £{{total_cost}}</h4>
    </div>

    <div class="page">
        
        <button class="addButton button-31" id="addTreatment">Add Treatments</button>
        <button class="EditButton button-31" id="EditAppoint">Edit Appointment</button>    
        <button class="deleteAppButton button-31" id="deleteAppoint">Delete Appointment</button>
        <button class="backBtn button-31" id="backBtn">Back</button>

    </div>
</section>